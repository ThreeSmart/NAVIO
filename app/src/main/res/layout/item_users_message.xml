<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/relative_layout"
    android:layout_width="100dp"
    android:layout_height="90dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/name"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <ImageView
        android:id="@+id/user_status"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="10dp"
        ></ImageView>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/user_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:civ_border_color="#31CDF6"
        app:civ_border_width="0dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#717171"
        app:civ_shadow_radius="5dp" />


    ></RelativeLayout>


    <TextView
        android:id="@+id/name"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="user_name"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/last_msg"
        app:layout_constraintLeft_toRightOf="@+id/relative_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/last_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="last_msg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/relative_layout"
        app:layout_constraintRight_toLeftOf="@+id/msg_time"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/msg_time"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:text="msg_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/last_msg"
        app:layout_constraintRight_toLeftOf="@+id/seen_status"
        app:layout_constraintTop_toBottomOf="@+id/name"

        />

    <ImageView
        android:id="@+id/seen_status"
        android:src="@drawable/status_online"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintBottom_toBottomOf="parent"></ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>